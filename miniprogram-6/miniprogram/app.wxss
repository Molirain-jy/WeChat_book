page {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    color: #333;
    font-size: 28rpx;
    line-height: 1.6;
    background-color: #f8f8f8;
    box-sizing: border-box;
  }
  
  .container {
    padding: 30rpx;
  }
  
  .card {
    background-color: #fff;
    border-radius: 12rpx;
    padding: 24rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  }
  
  .flex-row {
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  
  .flex-column {
    display: flex;
    flex-direction: column;
  }
  
  .flex-between {
    justify-content: space-between;
  }
  
  .flex-center {
    justify-content: center;
    align-items: center;
  }
  
  .btn-primary {
    background-color: #3963bc;
    color: #fff;
    border: none;
    border-radius: 8rpx;
    padding: 16rpx 24rpx;
    font-size: 28rpx;
  }
  
  .btn-default {
    background-color: #f0f0f0;
    color: #666;
    border: 1rpx solid #ddd;
    border-radius: 8rpx;
    padding: 16rpx 24rpx;
    font-size: 28rpx;
  }
  
  .loading {
    text-align: center;
    padding: 30rpx;
    color: #999;
  }
  
  .empty-tip {
    text-align: center;
    padding: 100rpx 0;
    color: #999;
  }