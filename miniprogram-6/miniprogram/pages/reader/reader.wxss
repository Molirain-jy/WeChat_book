.reader-container {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    background-color: #f9f9e8;
    transition: background-color 0.3s;
  }
  
  .reader-content {
    flex: 1;
    padding: 40rpx;
    overflow-y: auto;
    line-height: 1.8;
  }
  
  .book-title {
    font-size: 36rpx;
    font-weight: bold;
    text-align: center;
    margin-bottom: 40rpx;
  }
  
  .content-text {
    text-indent: 2em;
    word-wrap: break-word;
    white-space: pre-wrap;
  }
  
  .loading {
    text-align: center;
    padding: 200rpx 0;
  }
  
  .reader-toolbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 40rpx;
    border-top: 1rpx solid rgba(0, 0, 0, 0.1);
    background-color: #f0f0f0;
    transition: background-color 0.3s;
  }
  
  .toolbar-btn {
    padding: 10rpx 30rpx;
    border-radius: 32rpx;
    background-color: rgba(0, 0, 0, 0.05);
    font-size: 28rpx;
  }
  
  .progress-info {
    font-size: 24rpx;
  }
  
  /* 设置面板 */
  .settings-btn {
    position: fixed;
    right: 30rpx;
    top: 20rpx;
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    background-color: rgba(0, 0, 0, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36rpx;
  }
  
  .settings-panel {
    position: fixed;
    top: 0;
    right: -500rpx;
    width: 500rpx;
    height: 100%;
    background-color: #fff;
    box-shadow: -2px 0 10px rgba(0, 0, 0, 0.1);
    transition: right 0.3s;
    z-index: 100;
    padding: 60rpx 40rpx;
    box-sizing: border-box;
  }
  
  .settings-panel.show {
    right: 0;
  }
  
  .settings-title {
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 40rpx;
    text-align: center;
  }
  
  .settings-item {
    margin-bottom: 40rpx;
  }
  
  .font-size-control, .theme-control {
    display: flex;
    align-items: center;
    justify-content: space-around;
    margin-top: 20rpx;
  }
  
  .font-btn {
    width: 80rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f0f0f0;
    border-radius: 50%;
    font-size: 28rpx;
  }
  
  .font-size-value {
    font-size: 32rpx;
    width: 80rpx;
    text-align: center;
  }
  
  .theme-btn {
    padding: 12rpx 24rpx;
    background-color: #f0f0f0;
    border-radius: 8rpx;
    font-size: 28rpx;
  }
  
  .theme-btn.active {
    background-color: #3963bc;
    color: white;
  }
  
  .close-settings {
    position: absolute;
    bottom: 60rpx;
    left: 0;
    right: 0;
    text-align: center;
    padding: 24rpx;
    color: #3963bc;
    font-size: 32rpx;
  }