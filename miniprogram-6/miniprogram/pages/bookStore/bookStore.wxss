.container {
    padding: 0;
    background-color: #f8f8f8;
    min-height: 100vh;
  }
  
  /* 搜索栏 */
  .search-container {
    position: sticky;
    top: 0;
    z-index: 10;
    background-color: #f8f8f8;
    padding: 20rpx 30rpx;
  }
  
  .search-bar {
    display: flex;
    align-items: center;
    background-color: #fff;
    border-radius: 36rpx;
    padding: 12rpx 24rpx;
    box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  }
  
  .search-icon {
    margin-right: 16rpx;
    color: #999;
  }
  
  .search-input {
    flex: 1;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 28rpx;
  }
  
  .search-clear {
    color: #999;
    padding: 10rpx;
  }
  
  /* 分类栏 */
  .category-scroll {
    background-color: #fff;
    white-space: nowrap;
    padding: 20rpx 0;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  }
  
  .category-list {
    display: inline-flex;
    padding: 0 20rpx;
  }
  
  .category-item {
    padding: 12rpx 24rpx;
    margin-right: 20rpx;
    font-size: 28rpx;
    border-radius: 28rpx;
    background-color: #f5f5f5;
    color: #666;
    transition: all 0.3s;
  }
  
  .category-item.active {
    background-color: #3963bc;
    color: white;
  }
  
  /* 加载中 */
  .loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 60rpx 0;
  }
  
  .loading-icon {
    width: 60rpx;
    height: 60rpx;
    border: 4rpx solid #f3f3f3;
    border-top: 4rpx solid #3963bc;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-bottom: 20rpx;
  }
  
  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  
  .loading-text {
    color: #999;
    font-size: 28rpx;
  }
  
  /* 无数据提示 */
  .empty-tip {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 100rpx 0;
  }
  
  .empty-image {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 20rpx;
  }
  
  .empty-text {
    color: #999;
    font-size: 28rpx;
  }
  
  /* 书籍网格 */
  .book-grid {
    display: flex;
    flex-wrap: wrap;
    padding: 20rpx;
  }
  
  .book-item {
    width: 33.33%;
    padding: 15rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 30rpx;
  }
  
  .book-cover {
    position: relative;
    width: 100%;
    aspect-ratio: 3/4;
    border-radius: 12rpx;
    overflow: hidden;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
    margin-bottom: 16rpx;
    background-color: #f0f0f0;
  }
  
  .book-cover image {
    width: 100%;
    height: 100%;
  }
  
  .book-cover-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #eaeaea;
  }
  
  .book-emoji {
    font-size: 60rpx;
  }
  
  .book-downloads {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(0, 0, 0, 0.5);
    color: white;
    font-size: 22rpx;
    padding: 6rpx 0;
    text-align: center;
  }
  
  .book-title {
    font-size: 28rpx;
    font-weight: bold;
    text-align: center;
    margin-bottom: 8rpx;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  
  .book-author {
    font-size: 24rpx;
    color: #999;
    text-align: center;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  
  /* 回到顶部按钮 */
  .back-to-top {
    position: fixed;
    right: 30rpx;
    bottom: 120rpx;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.9);
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 99;
  }
  
  .back-to-top-icon {
    font-size: 40rpx;
  }